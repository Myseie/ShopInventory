@model ShopInventory.Models.Product

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" /> <!-- Döljer produktens ID -->

    <div class="form-group">
        <label asp-for="Name" class="control-label">Namn</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label">Beskrivning</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="control-label">Pris</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Category" class="control-label">Kategori</label>
        <input asp-for="Category" class="form-control" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <!-- Visa befintlig bild -->
    @if (!string.IsNullOrEmpty(Model.ImagePath))
    {
        <div class="form-group">
            <label>Nuvarande bild</label>
            <img src="@Model.ImagePath" alt="Product Image" style="max-height: 200px;" />
        </div>
    }

    <!-- Ladda upp en ny bild -->
    <div class="form-group">
        <label for="imageFile">Ladda upp ny bild</label>
        <input type="file" name="imageFile" class="form-control" />
    </div>

    <input type="submit" value="Save" class="btn btn-primary" />
</form>